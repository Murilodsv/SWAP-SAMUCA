                "cwd": "${workspaceRoot}/cases/SAMUCA", // Same as win
                "args": [""],                           // No args [ARRAY]
                "miDebuggerPath": "/usr/local/bin/gdb", // Set Debugger path    
            },
            "linux": {
                "cwd": "${workspaceRoot}/cases/SAMUCA", // Same as win
                "args": [""],                           // No args [ARRAY]
                "miDebuggerPath": "/usr/bin/gdb",       // Set Debugger path    
            },            
            "program": "${workspaceRoot}/build/bin/swap_samuca_v1.exe",    // Update accordingly
            "MIMode": "gdb",
            "type": "cppdbg",
            "request": "launch",
            "stopAtEntry": false,
            "externalConsole": true,
            "preLaunchTask": "SWAP-SAMUCA: Build DEBUG"
        }
    ]
